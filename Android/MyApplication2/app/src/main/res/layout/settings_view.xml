    <!-- Chechbox for trees TODO find all trees-->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="?attr/actionBarSize">

        <!-- The selector for the file directory -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current directory"
            android:textColor="#101010"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/directory_textview"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/directory_placeholder"
                />

        </LinearLayout>


        <!--Tree checkbox view-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select tree species"
            android:textColor="#101010"
            android:textSize="18sp" />

        <!--change tree names in res/strings-->
        <CheckBox android:id="@+id/chb_pine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pine"
            android:tag="pine"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/chb_spruce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="spruce"
            android:text="@string/spruce"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/chb_birch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/birch"
            android:tag="birch"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/chb_oak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/oak"
            android:tag="oak"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/chb_alder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alder"
            android:tag="alder"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/chb_aspen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aspen"
            android:tag="aspen"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/chb_rowan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rowan"
            android:tag="rowan"
            android:onClick="onCheckboxClicked"/>

    </LinearLayout>






</LinearLayout>
