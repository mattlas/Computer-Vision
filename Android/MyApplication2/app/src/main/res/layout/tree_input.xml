<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/inp_height"
        android:singleLine="true"
        android:maxLines="1"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/inp_diameter"
        android:singleLine="true"
        android:maxLines="1"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/inp_species"
        android:singleLine="true"
        android:maxLines="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/btn_save"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Save" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Delete" />

        <Button
            android:id="@+id/btn_preview_original"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Preview" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/btn_perspective_1"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/tree" />

        <ImageButton
            android:id="@+id/btn_perspective_2"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/tree" />

        <ImageButton
            android:id="@+id/btn_perspective_3"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/tree" />

        <ImageButton
            android:id="@+id/btn_perspective_4"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/tree" />

    </LinearLayout>


</LinearLayout>